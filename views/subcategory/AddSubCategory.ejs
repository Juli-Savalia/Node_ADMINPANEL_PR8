  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Dashboard</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Library
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <form
          action="/subcategory/AddSubCategoryPost"
          method="post"
          class="form-horizontal"
        >
          <div class="card-body">
            <h4 class="card-title">Add SubCategory</h4>
            <div class="form-group row">
              <label
                for="fname"
                class="col-sm-3 text-end control-label col-form-label"
                >Category</label>
              <div class="col-sm-9">
                <select value="" name="category" class="form-control">
                  <option>---Select Category---</option>
                  <% category.map((c,i)=>{ %>
                    <option value="<%= c._id %>">
                      <%= c.category %>
                    </option>
                 <% }) %>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <labeal
                for="fname"
                class="col-sm-3 text-end control-label col-form-label"
                >SubCategory</labeal>
              <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="subcategory name here" name="subcategory">
              </div>
            </div>
          </div>
          <div class="border-top">
            <div class="card-body">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/subcategory/ViewSubCategoryPage" class="btn btn-info">View</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Container fluid  -->
